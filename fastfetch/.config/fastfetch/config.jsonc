{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "arch_small",
        "padding": {
            "top": 1,
            "left": 1,
            "right": 2
	},
    },
    "display": {
        "separator": "  "
    },
    "modules": [
	"break",
	"title",
        {
            "type": "os",
            "key": "os    ",
            "keyColor": "#98c379"  
        },
        {
            "type": "kernel",
            "key": "kernel",
            "keyColor": "#98c379"
        },
        {
            "type": "shell",
            "key": "shell ",
            "keyColor": "#98c379"
        },
        {
            "type": "packages",
            "key": "pkgs  ",
            "keyColor": "#98c379"  
        },
        {
            "type": "uptime",
            "format": "{2}h {3}m",
            "key": "uptime",
            "keyColor": "#98c379"
        },
        {
            "type": "command",
            "key": "age   ",
            "keyColor": "#98c379",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
        },
        {
            "type": "memory",
            "key": "memory",
            "keyColor": "#98c379"
        },
        "break"
    ]
}
